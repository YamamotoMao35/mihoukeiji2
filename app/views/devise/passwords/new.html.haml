.password-forgot-page
  .password-container.col-sm-8.col-md-8
    #contact-form.container
      %h2.col-sm-6.col-md-6 パスワードをお忘れの方
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = render "devise/shared/error_messages", resource: resource
        .form-group.f-flex
          = f.label :email, class: "col-sm-1.col-md-1"
          %span.form-require.col-sm-1.col-md-1 必須
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "登録されたメールアドレス", class: "form-control required"
        .actions.d-flex
          = f.submit "送信する", id: "submit-form", class: "btn btn-secondary btn-lg"
      .page-links
        .page-links__login
          = link_to "ログインはこちら", new_user_session_path, class: "btn btn-login-link"
        .page-links__registration
          = link_to "新規登録はこちら", new_user_registration_path, class: "btn btn-registration-link"
