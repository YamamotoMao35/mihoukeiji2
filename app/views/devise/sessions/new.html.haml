#contact-form.container
  = link_to "みほう掲示板", root_path
  %h2 ログイン
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      = f.label "メールアドレス"
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control required"
    .field
      = f.label "パスワード"
      %br/
      = f.password_field :password, autocomplete: "current-password", class: "form-control required"
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = f.submit "ログイン", id: "submit-form"
  = render "devise/shared/links"
