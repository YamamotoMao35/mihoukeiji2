.main-side
  - if user_signed_in?
    %h4 ようこそ
    .user-name.d-flex
      %p= current_user.name
      %span さん
    %h5.btn.btn-outline-secondary.btn-lg
      = link_to "新規スレッド作成",new_board_path
  - else
    .user-name
      %h4 ゲストさん
    .side-nav-box
      .side-nav
        %h5.side-nav__signin.btn.btn-outline-primary
          = link_to "新規会員登録",new_user_registration_path
        %h5.side-nav__login.btn.btn-outline-primary
          = link_to "ログイン",new_user_session_path
  %p#RealtimeClockArea