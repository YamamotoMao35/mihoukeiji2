.board-wrapper.img-fluid
  .board-index
    .container
      = render 'boards/header'
      .sidebar.col-sm-3.col-md-3
        = render "boards/sidebar"
      .search-contents
      - if @search_title.present?
        - if (@board.length != 0)
          .search-word.col-sm-9.col-md-9
            %h3 #{@search_title}の検索結果
          = render "search-table"
        - else
          .search-word.col-sm-9.col-md-9
            %h3 スレッドがありません。
      - else
        .search-word.col-sm-9.col-md-9
          %h3 新着スレッド
        = render "search-table"
      %tbody.text-center
        = will_paginate @board,previous_label: ' < 前へ', next_label: '次へ >'
